{
    // =========================================================================
    // =                         基础路径配置                                 =
    // =========================================================================

    // [必需] 模板文件根目录，存放所有用于图像识别的模板图片 (如 start.png, pause.png)
    "template_root": "D:\\Workspace\\xjskp-auto\\templates",

    // [必需] Tesseract OCR引擎的安装路径，用于文字识别（如技能名称）
    "tesseract_path": "E:\\Tesseract-OCR\\tesseract.exe",

    // [可选] 日志文件保存路径，支持日期格式化（例如 %Y-%m-%d 会生成每日日志）
    "log_file_path": "D:\\Workspace\\logs\\auto_%Y-%m-%d.log",

    // =========================================================================
    // =                       核心识别模板配置                               =
    // =========================================================================

    // [必需] 技能选择界面的识别模板列表。用于判断是否进入了升级/技能选择界面。
    "skill_template_paths": [
        "skill_template.png",
        "skill_template2.png"
    ],

    // [必需] 开始游戏按钮的识别模板列表。
    "start_button_templates": [
        "start.png"
    ],
    
    // [可选] 开始按钮专用的匹配阈值，若未设置则使用全局 match_threshold。
    // 有时开始按钮在不同状态下外观略有变化，可单独设置以提高识别率。
    "start_button_threshold": 0.6,

    // [必需] 退出按钮的识别模板列表（用于暂停菜单中）。
    "exit_button_templates": [
        "exit_btn.png",
        "exit_btn2.png"
    ],

    // [必需] 返回按钮的识别模板列表（用于确认对话框中）。
    "back_button_templates": [
        "back_btn.png",
        "back_btn2.png"
    ],

    // [必需] 暂停按钮的识别模板列表（用于游戏进行中）。
    "pause_button_templates": [
        "pause.png",
        "pause2.png"
    ],

    // =========================================================================
    // =                         识别与控制参数                               =
    // =========================================================================

    // [必需] 全局图像匹配阈值 (0-1)。值越高，匹配越严格（减少误判），但可能导致漏检。
    // 值越低，识别越灵敏（减少漏检），但可能增加误判。建议从 0.6 开始调试。
    "match_threshold": 0.6,

    // [可选] 图像匹配算法。通常使用默认值即可。
    // 可选值: TM_CCOEFF, TM_CCOEFF_NORMED, TM_CCORR, TM_CCORR_NORMED, TM_SQDIFF, TM_SQDIFF_NORMED
    "match_method": "TM_CCOEFF_NORMED",

    // [可选] 轮询检测界面状态的时间间隔（秒）。
    "check_interval": 1.0,

    // [可选] 各种等待操作的最大超时时间（秒）。
    "max_wait_seconds": 600,

    // [必需] 每轮游戏的目标等级。达到此等级后，脚本将执行退出流程。
    "target_level": 5,

    // [必需] 脚本总循环次数。0 表示无限循环，直到手动停止。
    "loop_count": 2,

    // =========================================================================
    // =                         时间控制配置                                 =
    // =========================================================================

    // [必需] 各种操作后的等待时间，用于模拟人类操作和等待游戏加载/响应。
    "sleep_times": {
        "window_activation": 1,            // 窗口激活后的等待时间
        "after_start_game_click": 1.0,     // 点击开始游戏后的等待
        "start_verification_interval": 0.5,// 验证“开始游戏”是否成功的检查间隔
        "after_back_button_click": 0.5,    // 点击返回按钮后的等待
        "after_pause_button_click": 0.5,   // 点击暂停按钮后的等待
        "before_click_delay_min": 0.1,     // 每次点击前的最小延迟（模拟人类思考）
        "before_click_delay_max": 0.3,     // 每次点击前的最大延迟
        "move_duration_min": 0.1,          // 鼠标移动的最短时间
        "move_duration_max": 0.3,          // 鼠标移动的最长时间
        "retry_interval": 0.5,             // 操作失败后，重试前的等待时间
        "after_loop_finish": 2.0,          // 一轮完整游戏结束后的等待
        "after_skill_selection": 1.0,      // 选择技能后的等待时间
        "after_pause_click": 1.0,          // (重复定义，可忽略)
        "after_exit_click": 1.0            // (重复定义，可忽略)
    },

    // =========================================================================
    // =                         重试机制配置                                 =
    // =========================================================================

    // [可选] 定义各种关键操作的最大尝试次数，防止因偶然失败导致脚本卡死。
    "retry_settings": {
        "start_game_max_attempts": 5,      // 点击“开始游戏”的最大尝试次数
        "start_verification_max_checks": 5,// 验证“开始游戏”的最大检查次数
        "pause_button_max_attempts": 3,    // 点击“暂停”按钮的最大尝试次数
        "back_button_max_attempts": 3,     // 点击“返回”按钮的最大尝试次数
        "level_confirmation_checks": 2     // (预留) 等级确认的检查次数
    },

    // =========================================================================
    // =                         坐标校准配置                                 =
    // =========================================================================

    // [可选] 微调点击位置的偏移量。如果发现脚本总是点击在按钮的边缘或旁边，可以通过此配置修正。
    "calibration": {
        "start_x": 0,                      // 开始按钮的水平偏移
        "start_y": 0,                      // 开始按钮的垂直偏移
        "skill_x": 0,                      // 技能选择的水平偏移
        "skill_y": 0,                      // 技能选择的垂直偏移
        "back_x": 0,                       // 返回按钮的水平偏移
        "back_y": 0,                       // 返回按钮的垂直偏移
        "pause_x_offset": 0,               // 暂停按钮的水平偏移
        "pause_y_offset": 0                // 暂停按钮的垂直偏移
    },

    // =========================================================================
    // =                         图像处理配置                                 =
    // =========================================================================

    // [可选] 对截图和模板进行预处理，以提高识别成功率。
    "image_processing": {
        "contrast": 1.5,                   // 对比度调整系数 (1.0为原始)
        "sharpness": 1.0,                  // (预留) 锐度调整系数
        "threshold": -1,                   // 二值化阈值 (-1表示不启用)
        "use_gray": true,                  // 是否将图像转为灰度图处理，通常能提高识别率
        "use_edge": false                  // (预留) 是否使用边缘检测
    },

    // =========================================================================
    // =                       按钮默认位置配置                               =
    // =========================================================================

    // [必需] 当模板匹配失败时，脚本会尝试点击这些默认位置。坐标是相对于窗口的比例 (0-1)。
    "pause_button": {
        "default_x_ratio": 0.05,           // 暂停按钮的水平位置 (窗口宽度的5%)
        "default_y_ratio": 0.05            // 暂停按钮的垂直位置 (窗口高度的5%)
    },
    "exit_button": {
        "default_x_ratio": 0.5,            // 退出按钮的水平位置 (中间)
        "default_y_ratio": 0.6             // 退出按钮的垂直位置 (60%高度处)
    },
    "back_button": {
        "default_x_ratio": 0.5,            // 返回按钮的水平位置 (中间)
        "default_y_ratio": 0.7             // 返回按钮的垂直位置 (70%高度处)
    },
    "start_button": {
        "default_x_ratio": 0.5,            // 开始按钮的水平位置 (中间)
        "default_y_ratio": 0.8             // 开始按钮的垂直位置 (80%高度处)
    },

    // =========================================================================
    // =                       寰球(HQ)模式专属配置                           =
    // =========================================================================

    // [必需] 用于识别寰球模式下各种界面元素的模板列表。
    "hq_invite_templates": [
        "invite.png",
        "invite2.png"
    ],
    "hq_team_up_title_templates": [
        "hq_invite_title.png"
    ],
    "hq_team_up_templates": [
        "team_up.png"
    ],
    "hq_send_invite_templates": [
        "send_invite.png",
        "send_invite2.png"
    ],
    "hq_start_templates": [
        "hq_start.png",
        "hq_start2.png"
    ],
    "activated_skills_templates": [
        "activated_skills.png"
    ],
    "hq_skill_template_paths": [
        "hq_skill.png",
        "hq_skill2.png"
    ],

    // =========================================================================
    // =                         游戏窗口配置                                 =
    // =========================================================================

    // [必需] 游戏窗口的标题。脚本通过这个标题来查找和激活游戏窗口。
    // 请确保与游戏窗口的实际标题完全一致（可以使用窗口Spy工具查看）。
    "game_title": "向僵尸开炮"
}